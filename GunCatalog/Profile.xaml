<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GunCatalog.Profile"
             Title="Profile">
    <VerticalStackLayout>
        <Label
            Text="Edit your profile"
            FontFamily="Old English Text MT"
            FontSize="40"
            HorizontalOptions="Center"
            Margin="0,20,0,40"
            SemanticProperties.HeadingLevel="Level1" />
        <Image  
            Source="noprofile.png"
            HeightRequest="200"
            Aspect="AspectFit" />
        <Grid HorizontalOptions="Center" Margin="0,20,0,0">
            <Grid.RowDefinitions Height="auto"/>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" BackgroundColor="White" CornerRadius="35" Margin="0,0,10,0">
                <Button.ImageSource>
                    <FileImageSource File="camera.png"/>
                </Button.ImageSource>
            </Button>
            <Button Grid.Column="1" BackgroundColor="White" CornerRadius="35">
                <Button.ImageSource>
                    <FileImageSource File="gallery.png"/>
                </Button.ImageSource>
            </Button>
        </Grid>
    </VerticalStackLayout>
</ContentPage>