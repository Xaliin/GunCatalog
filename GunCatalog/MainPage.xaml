<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GunCatalog.MainPage"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView">

    <Grid>
        <!-- Logo and slogan -->
        <Image  
            Source="logo.png"
            HeightRequest="100"
            Aspect="AspectFit"
            SemanticProperties.Description="A Sniper Rifle logo" />
        <Label
            Text="This is a gun enthusiast favorite place."
            FontFamily="Old English Text MT"
            FontSize="25"
            Margin="0,-20,0,20"
            SemanticProperties.HeadingLevel="Level1" />
        <ScrollView>
            <VerticalStackLayout
            x:Name="CatalogItems"
            Padding="30,10"
            Spacing="25">
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>