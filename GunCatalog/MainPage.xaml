<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GunCatalog.MainPage"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView">

    <Grid>
        <Image  
            Source="logo.png"
            HeightRequest="100"
            Aspect="AspectFit"
            VerticalOptions="Start"
            SemanticProperties.Description="A Sniper Rifle logo" />
        <Label
            Text="A gun enthusiast's favorite place."
            FontFamily="Old English Text MT"
            FontSize="25"
            HorizontalOptions="Center"
            Margin="0,90,0,40"
            SemanticProperties.HeadingLevel="Level1" />
        <ScrollView Margin="0,140,0,0">
            <VerticalStackLayout 
                x:Name="CatalogItems"
                Padding="30,10"
                Spacing="25">
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
        <!-- Logo and slogan -->
        

</ContentPage>